<%include ../partial/header%>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add a review to <%= campground.name%></h1>
		<div style="width: 30%; margin:25px auto;">
			<form method="POST" action="/campgrounds/<%=campground._id%>/comments">
				<div class="form-group">
				 <input type="text" class="form-control" name="comment[author]" placeholder="Author name">
				</div>
				<div class="form-group">
				 <input type="text" class="form-control" name="comment[text]" placeholder="Comment goes here">
				</div>
				<div class="form-group">
				 <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>	
			    </div>
			</form>
			<a href="/campgrounds">go back</a>	
		</div>
	</div>
</div>
<%include ../partial/footer%>