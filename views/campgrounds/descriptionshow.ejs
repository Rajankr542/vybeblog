<div class="share_container">
	<p class="share_message">Share this:</p>
	<table class="table table-bordered">
		<thead>
		<th><img src="/images/fb-icn.png"></th>
		<th><img src="/images/twitter-icn.png"></th>
		<th><img src="/images/linked-in-icn.png"></th>
		<th><img src="/images/3dot-icn.png"></th>
		</thead>
	</table>
</div>

<div class="comment_form_container">
	<div class="leave_message">
		<p>Leave a Reply</p>
	</div>
	<div class="labled_message_for_comment">
		<p>Your email address will not be published.Required fields are marked*</p>
	</div>
 <form  method="POST" action="/campgrounds/<%=campgrounds._id%>/comments">
	<div class="text_area_container">
		<textarea rows="5" cols="100" name="comment[text]" id="textarea_comment" class="textarea_comment" placeholder="Comment*"></textarea>  
	</div>
	<div class="input_comment_container_parent">
	<div class="input_comment_container">
		<input type="text" name="comment[author]" class="input_commet" placeholder="Name*">
	</div>
	<div class="input_comment_container">
		<input type="text" name="comment[email]" class="input_commet" placeholder="Email*">
	</div>
	</div>
	<div class="comment_submit_button_container">
		<button class="comment_submit_button" type="submit">submit</button>
	</div>


</form>
</div>




</div>


